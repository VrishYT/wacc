# Very simple tail recursive function

# Output:
# x = 0
# x = 1
# x = 2
# x = 3
# x = 4

# Exit:
# 5

# Program:

begin
    @tailrec
    int sumToFive(int x) is
        if x > 4 
        then skip
        else 
            print "x = " ;
            println x
        fi ;
        if x == 5
        then return x
        else
            int y = call sumToFive(x + 1) ;
            return y 
        fi
    end
    int x = call sumToFive(0) ;
    exit x    
end

