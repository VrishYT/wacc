# Program:

begin
    class Square {
        int sumToFive(int x) is
            if x == 5
            then return x
            else
                int y = call sumToFive(x + 1) ;
                return y 
            fi
        end
    }

    Square sq = new Square{};
    int x = call sq.sumToFive(0) ;
    exit x  
end